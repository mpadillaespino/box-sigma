                    },
                    {
                        "$ref": "atlas.yaml#/components/parameters/opn-code"
                    },
                    {
                        "$ref": "atlas.yaml#/components/parameters/opn-number"
                    },
                    {
                        "$ref": "atlas.yaml#/components/parameters/app-name"
                    },
                    {
                        "$ref": "atlas.yaml#/components/parameters/agency-code"
                    },
                    {
                        "name": "znak",
                        "in": "header",
